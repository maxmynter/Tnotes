{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Tnotes",
  "version": "0.1.0",
  "identifier": "Tnotes",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Tnotes",
        "minWidth":400,
        "minHeight": 300,
        "width": 800,
        "height": 600,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": [ "dmg" ],
    "icon": [
      "icons/icon_32x32.png",
      "icons/icon_128x128.png",
      "icons/icon_128x128@2x.png"
    ]
  }
}
